<script type="text/javascript">
	$(document).ready(function() {
	
		var gameTemplate = '<div class="well well-small"> <a href="gamebyid?id=${gameId}">Join Game - [${name}]</a> </div>';

		$.getJSON("list", function(games) {
			jQuery.each(games, function(game) {
				var gameElement = $.tmpl(gameTemplate, {
					gameId: games[game].id,
					name: games[game].name
				});

				$('#availableGames').append(gameElement);
			});
		});
	});

	function createGame() {
		var guid = GUID();
		$.post("add", { id: guid, name: "browser game" }, function() {
    		$.post("joingame", { gameId: guid, playerId: "jjw", playerName: "justin williams" }, function() { 
          		window.location.replace("/gamebyid?id=" + guid);
        	});
		});
	};

	function GUID(){
		var S4 = function(){
			return Math.floor(
				Math.random() * 0x10000
				).toString();
		};

		return (
			   S4() + S4() + "-" +
			   S4() + "-" +
			   S4() + "-" +
			   S4() + "-" +
			   S4() + S4() + S4()
			   );
	};

</script>